@using global::GiveTurn.Model.Dtos
<h3>TurnDisplay</h3>

@code {
    [Parameter]
    public ICollection<TurnDto> UserTurns { get; set; }
}

<table>
    <thead>
        <tr>
            <th> Turn Date </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in UserTurns)
        {
            <tr>
                <td>
                    @item.UserTurnDate.ToString("dd - MM - yyyy hh:mm tt")
                </td>
                <td>
                    <a class="btn btn-danger">
                        <span class="oi oi-trash">
                        </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>